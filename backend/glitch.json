{
  "install": "pip install -r requirements.txt",
  "start": "uvicorn main:app --host 0.0.0.0 --port 3000",
  "watch": {
    "ignore": [
      "*.pyc",
      "__pycache__"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$"
      ]
    }
  }
}
